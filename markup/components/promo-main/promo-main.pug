mixin promo-main(data)
  div(style='background-image: url(__static__img/general/promo-back-bg.jpg)').promo
    +header()
    section.promo__wrapper
      .container
        .promo__inner
          .promo__body
            span.promo__name Командор
            h1.promo__title Больше, чем просто лагерь
            p.promo__lead.lead Предлагаем интересные сезонные программы для детей
            .promo__previev-video
              button(type="button" data-toggle="modal" data-target="#video-modal").promo__play.button-play
                +icon('play', 11, 13)
              picture
                source(type="image/webp" srcset="__static__img/general/promo-image.webp")
                img(src="__static__img/general/promo-image.png" srcset="__static__img/general/promo-image@2x.png 2x" aria-hidden="true" alt="")
